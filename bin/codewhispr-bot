#!/bin/sh
# Follow symlinks to find the real script location (macOS compatible)
script="$0"
while [ -L "$script" ]; do
  link=$(readlink "$script")
  if [ "$(expr "$link" : '/.*')" -gt 0 ]; then
    script="$link"
  else
    script="$(dirname "$script")/$link"
  fi
done
dir=$(cd "$(dirname "$script")/.." && pwd -P)
"$dir/node_modules/.bin/tsx" --tsconfig "$dir/tsconfig.json" "$dir/src/index.ts" "$@"
